  <script>
    // Guarda los mensajes de contacto en localStorage
    function guardarMensaje(e) {
      e.preventDefault();
      const nombre = document.getElementById("nombre").value;
      const correo = document.getElementById("correo").value;
      const mensaje = document.getElementById("mensaje").value;

      const data = JSON.parse(localStorage.getItem("mensajes")) || [];
      data.push({ nombre, correo, mensaje, fecha: new Date().toLocaleString() });
      localStorage.setItem("mensajes", JSON.stringify(data));

      alert("Â¡Gracias por contactarnos, " + nombre + "! Tu mensaje fue guardado.");
      e.target.reset();
    }
  </script>
